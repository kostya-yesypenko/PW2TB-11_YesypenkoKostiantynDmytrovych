<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/coalQuantityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Кількість вугілля (т)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/oilQuantityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Кількість мазуту (т)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/gasQuantityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Кількість природного газу (м³)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Розрахувати" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="16dp" />

</LinearLayout>
